#include<iostream>
using namespace std;
class B;
class A
{
     int a;
 public:
    void get(int x)
    {
        a=x;
    }
    void disp()
    {
        cout<<"A="<<a;
    }
    friend int Big(A,B);
    friend int avg(A,B);
};
class B
{
    int b;
public:
    void read(int x)
    {
        b=x;
    }
    void pri()
    {
        cout<<"\nB="<<b;
    }
    friend int Big(A,B);
    friend int avg(A,B);
};
int Big(A M,B N)
{
    if(M.a>N.b)
        return (M.a);
    else
        return (N.b);
}
int avg(A K,B P)
{
    return((K.a+P.b)/2);
}
int main()
{
    A ob;
    B ob1;
    int R,m,n,Q;
    cout<<"Enter 1St number:";
    cin>>n;
    ob.get(n);
    cout<<"Enter 2Nd number:";
    cin>>m;
    cout<<"Numbers are:";
    ob1.read(m);
    cout<<endl;
    ob.disp();
    ob1.pri();
    cout<<endl;
    R=Big(ob,ob1);
    Q=avg(ob,ob1);
    cout<<"Biggest value is:"<<R<<endl;
    cout<<"Average value is:"<<Q<<endl;
}
